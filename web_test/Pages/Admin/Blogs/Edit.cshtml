@page "{id:Guid}"
@model web_test.Pages.Admin.Blogs.EditModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Edit blog post</h1>
    </div>
</div>

@if (Model.BlogPost != null)
{
    <div>
        <div class="container">
            <form method="post">
                @* div para el ID *@
                <div class="mb-3">
                    <label for="heading" class="form-label">Id</label>
                    <input type="text" class="form-control" id="id" asp-for="BlogPost.Id" readonly>
                </div>

                @* div para heading *@
                <div class="mb-3">
                    <label for="heading" class="form-label">Heading</label>
                    <input type="text" class="form-control" id="heading" asp-for="BlogPost.Heading">
                </div>

                @* div para title*@
                <div class="mb-3">
                    <label for="pageTitle" class="form-label">Page Title</label>
                    <input type="text" class="form-control" id="pageTitle" asp-for="BlogPost.PageTitle">
                </div>

                @* div para contain*@
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" asp-for="BlogPost.Content"></textarea>
                </div>

                @* div para short description*@
                <div class="mb-3">
                    <label for="shortDescription" class="form-label">Short Description</label>
                    <input type="text" class="form-control" id="shortDescription"
                           asp-for="BlogPost.ShortDescription">
                </div>

                @* div para featuredImage*@
                <div class="mb-3">
                    <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
                    <input type="text" class="form-control" id="featuredImageUrl"
                           asp-for="BlogPost.FeaturedImageUrl">
                </div>

                @* div para urlHandle*@
                <div class="mb-3">
                    <label for="urlHandle" class="form-label">Url Handle</label>
                    <input type="text" class="form-control" id="urlHandle" asp-for="BlogPost.UrlHandle">
                </div>

                @* div para Date*@
                <div class="mb-3">
                    <label for="publishDate" class="form-label">Publish Date</label>
                    <input type="date" class="form-control" id="publishDate" asp-for="BlogPost.PublishedDate">
                </div>

                @* div para Author*@
                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" asp-for="BlogPost.Author">
                </div>

                @* div para visibility check*@
                <div class="form-check mb-3">
                    <input class="form-check-input me-1" type="checkbox" id="isVisible"
                           asp-for="BlogPost.Visible">
                    <label class="form-check-label">
                        Is Visible
                    </label>
                </div>

                @* div para button*@
                <div class="mb-3 d-flex justify-content-between">
                    <button class="btn btn-primary" type="submit" asp-page-handler="Edit">Submit</button>
                    <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="container">
        <p>
            No Blogs to show
        </p>
    </div>
}
